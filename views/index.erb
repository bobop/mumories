<!DOCTYPE html>
<html>
  <head>
    <title>Mumories - Mum's 60th Birthday!</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="/application.css">
    <script src="/vibrant.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Niconne" rel="stylesheet"> 
  </head>
  <body>
    <div id="backgroundImage">
      <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <h1 class="text-center">Mumories</h1>

        <div id="picture" class="text-center">
          <img src="https://s3.eu-west-2.amazonaws.com/mumories/mumory_<%= @mumory %>.jpg", class='img-fluid'>
        </div>
      </div>

      <div id="main"></div>

      <script type="text/javascript">
        var img = document.createElement('img');
        img.setAttribute('src', 'https://s3.eu-west-2.amazonaws.com/mumories/mumory_<%= @mumory %>.jpg')
        img.crossOrigin = "Anonymous";

        img.addEventListener('load', function() {
            var vibrant = new Vibrant(img);
            var swatches = vibrant.swatches()

            console.log(swatches['Vibrant'].getHex())
            document.getElementById("main").style = 'background-color: ' + swatches['Vibrant'].getHex()
            document.getElementsByTagName("h1")[0].style = 'color: ' + swatches['Vibrant'].getTitleTextColor()

            // for (var swatch in swatches)
            //     if (swatches.hasOwnProperty(swatch) && swatches[swatch])
            //         console.log(swatch, swatches[swatch].getHex())

        });
      </script>
    </div>
    <div id="flower">
      <img src="/flowers_<%= Date.today.cwday %>.png">
    </div>
  </body>
</html>
